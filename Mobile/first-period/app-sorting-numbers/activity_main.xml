<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >

        <TextView
            android:id="@+id/txtAdvinhe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/advinhe"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="10dp" >

            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="@string/um"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textAllCaps="false"
                android:backgroundTint="#cccccc" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="@string/dois"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textAllCaps="false"
                android:backgroundTint="#cccccc"
                android:layout_marginLeft="10dp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="@string/tres"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textAllCaps="false"
                android:backgroundTint="#cccccc"
                android:layout_marginLeft="10dp" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="@string/quatro"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textAllCaps="false"
                android:backgroundTint="#cccccc"
                android:layout_marginLeft="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="10dp" >

            <Button
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="@string/cinco"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textAllCaps="false"
                android:backgroundTint="#cccccc" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="@string/seis"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textAllCaps="false"
                android:backgroundTint="#cccccc"
                android:layout_marginLeft="10dp" />

            <Button
                android:id="@+id/btn7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="@string/sete"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textAllCaps="false"
                android:backgroundTint="#cccccc"
                android:layout_marginLeft="10dp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="@string/oito"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textAllCaps="false"
                android:backgroundTint="#cccccc"
                android:layout_marginLeft="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="10dp" >

            <Button
                android:id="@+id/btn9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="@string/nove"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textAllCaps="false"
                android:backgroundTint="#cccccc" />

            <Button
                android:id="@+id/btn10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="@string/dez"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textAllCaps="false"
                android:backgroundTint="#cccccc"
                android:layout_marginLeft="10dp" />

            <Button
                android:id="@+id/btn11"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="@string/onze"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textAllCaps="false"
                android:backgroundTint="#cccccc"
                android:layout_marginLeft="10dp" />

            <Button
                android:id="@+id/btn12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="@string/doze"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textAllCaps="false"
                android:backgroundTint="#cccccc"
                android:layout_marginLeft="10dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnSortearNumero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sortear_numero"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textAllCaps="false"
            android:backgroundTint="#cccccc"
            android:layout_marginTop="10dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
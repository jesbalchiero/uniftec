<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TimePicker
                    android:id="@+id/timePicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <CheckBox
                    android:id="@+id/chkDespertadorHabilitado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/despertador_desabilitado"
                    android:textColor="@android:color/black"
                    android:textSize="22sp"
                    android:layout_marginTop="20dp" />

                <Button
                    android:id="@+id/btnAgendarParaDespertar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/agendar_para_despertar"
                    android:textColor="@android:color/black"
                    android:textSize="22sp"
                    android:textAllCaps="false"
                    android:backgroundTint="#cccccc"
                    android:layout_marginTop="20dp" />

                <Button
                    android:id="@+id/btnCancelarDespertador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cancelar_despertador"
                    android:textColor="@android:color/black"
                    android:textSize="22sp"
                    android:textAllCaps="false"
                    android:backgroundTint="#cccccc"
                    android:layout_marginTop="20dp" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
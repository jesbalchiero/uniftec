<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SensoresActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >

        <TextView
            android:id="@+id/txtValorLido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/valor_lido"
            android:textColor="@android:color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/txtValor"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#222222"
            android:fontFamily="monospace"
            android:textColor="#00AA00"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/btnAcelerometro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/acelerometro"
            android:textColor="@android:color/black"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:backgroundTint="#cccccc"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/btnGiroscopio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/giroscopio"
            android:textColor="@android:color/black"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:backgroundTint="#cccccc"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/btnLuminosidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/luminosidade"
            android:textColor="@android:color/black"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:backgroundTint="#cccccc"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/btnProximidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/proximidade"
            android:textColor="@android:color/black"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:backgroundTint="#cccccc"
            android:layout_marginTop="20dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>